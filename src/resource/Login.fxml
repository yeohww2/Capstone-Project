<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPane" prefHeight="667" prefWidth="375" style="-fx-background-color: #003366;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.parking.controller.LoginController">

    <!-- Welcome Back Label -->
    <Label alignment="TOP_CENTER" layoutX="73.0" layoutY="170.0" text="WELCOME BACK" textFill="white">
        <font>
            <Font name="System Bold" size="29.0" />
        </font>
    </Label>
    <Label layoutX="98.0" layoutY="233.0" text="Enter your details below to log in" textFill="#B0B0B0">
        <font>
            <Font size="12.0" />
        </font>
    </Label>
    <TextField fx:id="usernameField" layoutX="49.0" layoutY="284.0" prefWidth="275" promptText="Username" style="-fx-background-radius: 20; -fx-padding: 10;">
        <font>
            <Font name="System Italic" size="13.0" />
        </font>
    </TextField>
    <PasswordField fx:id="passwordField" layoutX="49.0" layoutY="351.0" prefWidth="275" promptText="Password" style="-fx-background-radius: 20; -fx-padding: 10;">
        <font>
            <Font name="System Italic" size="13.0" />
        </font>
    </PasswordField>
    <Button layoutX="49.0" layoutY="418.0" onAction="#handleLogin" prefWidth="275" style="-fx-background-color: #00BFFF; -fx-text-fill: white; -fx-background-radius: 20;" text="Log In">
        <font>
            <Font size="16.0" />
        </font></Button>
    <Label layoutX="127.0" layoutY="471.0" onMouseClicked="#handleForgotPassword" styleClass="forgot-password-label" text="Forgot password?" textFill="#b0b0b0" />
    <Label layoutX="88.0" layoutY="529.0" onMouseClicked="#handleRegister" styleClass="hover-label" text="Already have an account? Sign Up." textFill="#b0b0b0">
        <font>
            <Font size="13.0" />
        </font>
    </Label>
    <Line endX="100.0" layoutX="186.0" layoutY="512.0" startX="-100.0" stroke="#aae4f2" />
</AnchorPane>
