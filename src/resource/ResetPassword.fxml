<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="resetPasswordPane" prefHeight="667.0" prefWidth="375.0" style="-fx-background-color: #003B73;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.parking.controller.ResetPasswordController">
    <!-- Title -->
    <Label layoutX="89.0" layoutY="175.0" style="-fx-font-size: 27; -fx-font-weight: bold; -fx-text-fill: white;" text="Reset Password" />

    <!-- Instructions -->
    <Label layoutX="88.0" layoutY="221.0" style="-fx-font-size: 14; -fx-text-fill: white;" text="Enter your new password below:" />

    <!-- New Password Field -->
    <PasswordField fx:id="newPasswordField" layoutX="58.0" layoutY="283.0" prefHeight="40.0" prefWidth="260.0" promptText="New Password" style="-fx-background-radius: 20; -fx-font-size: 14;" />

    <!-- Confirm Password Field -->
    <PasswordField fx:id="confirmPasswordField" layoutX="58.0" layoutY="347.0" prefHeight="40.0" prefWidth="260.0" promptText="Confirm Password" style="-fx-background-radius: 20; -fx-font-size: 14;" />

    <!-- Reset Button -->
    <Button layoutX="108.0" layoutY="416.0" onAction="#handleResetPassword" prefWidth="160.0" style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 20;" text="Reset Password" />

    <!-- Cancel Button -->
    <Button layoutX="108.0" layoutY="466.0" onAction="#goToLogin" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-underline: true;" text="Cancel" />
</AnchorPane>
