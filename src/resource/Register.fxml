<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="667.0" prefWidth="375.0" style="-fx-background-color: #003B73;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.parking.controller.RegisterController">
    <!-- Title -->
    <Label layoutX="70.0" layoutY="123.0" style="-fx-font-size: 27; -fx-font-weight: bold; -fx-text-fill: white;" text="CREATE ACCOUNT" />

    <!-- Full Name Field -->
    <TextField fx:id="fullNameField" layoutX="63.0" layoutY="180.0" prefHeight="40.0" prefWidth="250.0" promptText="Full Name" style="-fx-background-radius: 20; -fx-font-size: 14; -fx-font-style: italic;" />

    <!-- Username Field -->
    <TextField fx:id="usernameField" layoutX="63.0" layoutY="237.0" prefHeight="40.0" prefWidth="250.0" promptText="Username" style="-fx-background-radius: 20; -fx-font-size: 14; -fx-font-style: italic;" />

    <!-- Email Field -->
    <TextField fx:id="emailField" layoutX="63.0" layoutY="356.0" prefHeight="40.0" prefWidth="250.0" promptText="Email" style="-fx-background-radius: 20; -fx-font-size: 14; -fx-font-style: italic;" />

    <!-- Password Field -->
    <PasswordField fx:id="passwordField" layoutX="63.0" layoutY="415.0" prefHeight="40.0" prefWidth="250.0" promptText="Password" style="-fx-background-radius: 20; -fx-font-size: 14; -fx-font-style: italic;" />

    <!-- Confirm Password Field -->
    <PasswordField fx:id="confirmPasswordField" layoutX="63.0" layoutY="472.0" prefHeight="40.0" prefWidth="250.0" promptText="Confirm Password" style="-fx-background-radius: 20; -fx-font-size: 14; -fx-font-style: italic;" />

    <!-- IC Number Field -->
    <TextField fx:id="icNumberField" layoutX="63.0" layoutY="296.0" prefHeight="40.0" prefWidth="250.0" promptText="IC Number" style="-fx-background-radius: 20; -fx-font-size: 14; -fx-font-style: italic;" />

    <!-- Security Question Label -->
    <Label layoutX="34.0" layoutY="523.0" style="-fx-font-size: 14; -fx-text-fill: white;" text="Security Question: Who is your favorite lecturer?" />

    <!-- Security Answer Field -->
    <TextField fx:id="securityAnswerField" layoutX="63.0" layoutY="549.0" prefHeight="40.0" prefWidth="250.0" promptText="Answer" style="-fx-background-radius: 20; -fx-font-size: 14; -fx-font-style: italic;" />

    <!-- Register Button -->
    <Button layoutX="138.0" layoutY="602.0" onAction="#handleRegister" prefWidth="100.0" style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 20;" text="Register" />

    <!-- Already Have Account Text -->
    <Label layoutX="83.0" layoutY="653.0" style="-fx-font-size: 14; -fx-text-fill: lightgray;" text="Already have an account?" />

    <!-- Login Link -->
    <Button layoutX="250.0" layoutY="648.0" onAction="#goToLogin" style="-fx-background-color: transparent; -fx-text-fill: #1E90FF; -fx-font-size: 14; -fx-underline: true;" text="Log In" />
</AnchorPane>
