<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="forgotPasswordPane" prefHeight="667.0" prefWidth="375.0" style="-fx-background-color: #003B73;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.parking.controller.ForgotPasswordController">
    <Label layoutX="60.0" layoutY="82.0" style="-fx-text-fill: white;" text="FORGOT PASSWORD">
        <font>
            <Font name="System Bold" size="26.0" />
        </font>
    </Label>
    <Label layoutX="72.0" layoutY="119.0" prefHeight="38.0" prefWidth="225.0" style="-fx-text-fill: #B0B0B0;" text="Enter your details to reset your password">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <!-- Full Name Input -->
    <TextField fx:id="fullNameField" layoutX="48.0" layoutY="172.0" prefWidth="280" promptText="Full Name" style="-fx-background-radius: 20; -fx-padding: 10;">
        <font>
            <Font name="System Italic" size="13.0" />
        </font>
    </TextField>

    <!-- IC Number Input -->
    <TextField fx:id="icNumberField" layoutX="48.0" layoutY="231.0" prefWidth="280" promptText="IC Number" style="-fx-background-radius: 20; -fx-padding: 10;">
        <font>
            <Font name="System Italic" size="13.0" />
        </font>
    </TextField>

    <!-- Username or Email Input -->
    <TextField fx:id="usernameEmailField" layoutX="48.0" layoutY="291.0" prefWidth="280" promptText="Username or Email" style="-fx-background-radius: 20; -fx-padding: 10;">
        <font>
            <Font name="System Italic" size="13.0" />
        </font>
    </TextField>

    <!-- Security Question Label -->
    <Label layoutX="48.0" layoutY="344.0" style="-fx-text-fill: white;" text="Security Question:">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <!-- Security Question Text -->
    <Label layoutX="48.0" layoutY="372.0" style="-fx-text-fill: white;" text="Who is your favorite lecturer?">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <!-- Security Answer Input -->
    <TextField fx:id="securityAnswerField" layoutX="48.0" layoutY="403.0" prefWidth="280" promptText="Answer" style="-fx-background-radius: 20; -fx-padding: 10;">
        <font>
            <Font name="System Italic" size="13.0" />
        </font>
    </TextField>

    <!-- Submit Button -->
    <Button layoutX="48.0" layoutY="468.0" onAction="#handlePasswordReset" prefHeight="48.0" prefWidth="280" style="-fx-background-color: #00BFFF; -fx-text-fill: white; -fx-background-radius: 20;" text="Submit">
        <font>
            <Font size="16.0" />
        </font>
    </Button>

    <!-- Return to Login Link -->
    <Button layoutX="48.0" layoutY="527.0" onAction="#handleReturn" prefHeight="40.0" prefWidth="280" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-underline: true;" text="Back to Login">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
</AnchorPane>
